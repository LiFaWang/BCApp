<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvOrderNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/spinner_drawable"
                android:gravity="center"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:text="订 单 号"
                android:textColor="@color/colorTitle"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvStyleNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:background="@drawable/spinner_drawable"
                android:gravity="center"
                android:text="款  号"
                android:textColor="@color/colorTitle"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_BatchNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:background="@drawable/spinner_drawable"
                android:gravity="center"
                android:text="批 次 号"
                android:textColor="@color/colorTitle"
                android:textSize="20sp"/>
        </LinearLayout>
        <include layout="@layout/underline_black"/>
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:id="@+id/shrinkLayout"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:gravity="center_vertical"
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:gravity="center"

                               android:text="订单交期"
                               android:textColor="@color/colorTitle"
                               android:textSize="20sp"/>
                           <TextView
                               android:id="@+id/tvDeliveryDate"
                               android:layout_width="match_parent"
                               android:textSize="20sp"
                               android:textColor="#9e0efe"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:text="2017-05-05"/>

                       </LinearLayout>
                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <TextView
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_weight="1"
                               android:gravity="center"
                               android:text="订单数量"

                               android:textColor="@color/colorTitle"
                               android:textSize="20sp"/>

                           <TextView
                               android:id="@+id/tvOrderQTY"
                               android:layout_width="match_parent"
                               android:textSize="20sp"
                               android:textColor="#9e0efe"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:text="100"/>

                       </LinearLayout>
                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <TextView
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:text="累计裁剪数量"
                               android:textColor="@color/colorTitle"
                               android:textSize="20sp"/>
                           <TextView
                               android:id="@+id/tvCutQTY"
                               android:layout_width="match_parent"
                               android:textSize="20sp"
                               android:textColor="#9e0efe"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:text="100"/>

                       </LinearLayout>
                       <LinearLayout
                           android:padding="10dp"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">


                           <TextView
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:text="以上线数量"
                               android:textColor="@color/colorTitle"
                               android:textSize="20sp"/>
                           <TextView
                               android:id="@+id/tvUpQTY"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textSize="20sp"
                               android:textColor="#9e0efe"
                               android:gravity="center"
                               android:text="100"/>

                       </LinearLayout>
                       <LinearLayout
                           android:padding="10dp"
                           android:id="@+id/ll_order"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <TextView
                               android:layout_marginBottom="5dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:text="已下线数量"
                               android:textColor="@color/colorTitle"
                               android:textSize="20sp"/>
                           <TextView
                               android:id="@+id/tvDownQTY"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:textSize="20sp"
                               android:textColor="#9e0efe"
                               android:text="100"/>

                       </LinearLayout>
                   </LinearLayout>

                   <ImageView
                       android:layout_marginLeft="10dp"
                       android:scaleType="fitXY"
                       android:id="@+id/ivPicture"
                       android:layout_width="150dp"
                       android:layout_height="100dp"
                       android:src="@mipmap/ic_launcher_round"/>
               </LinearLayout>
               <TextView
                   android:padding="7dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:gravity="center"
                   android:text="工序平衡图"
                   android:textColor="@color/blue"
                   android:textSize="22sp"/>
               <include layout="@layout/underline_black"/>
               <com.github.mikephil.charting.charts.BarChart
                   android:id="@+id/barChart"
                   android:layout_width="match_parent"
                   android:layout_height="120dp"/>
               <include layout="@layout/underline_black"/>
           </LinearLayout>
           <android.support.v7.widget.CardView
               android:layout_gravity="right|bottom"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               app:cardBackgroundColor="@color/blue"
               app:cardCornerRadius="5dp"
               app:cardElevation="5dp">
               <Button
                   android:background="@color/blue"
                   android:id="@+id/btnShrink"
                   android:gravity="center"
                   android:text="收缩"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </android.support.v7.widget.CardView>
       </FrameLayout>
    </LinearLayout>
    <!--柱状图-->
    <!--<include layout="@layout/head_barchart_list"/>-->

    <TextView
        android:padding="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="工序指派"
        android:textColor="@color/blue"
        android:textSize="22sp"/>
    <include layout="@layout/underline_black"/>
    <LinearLayout
        android:id="@+id/hdvgMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:background="@drawable/setbar_bg"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="工序组"
                android:textColor="@color/colorTitle"
                android:textSize="20sp"/>

            <ListView
                android:id="@+id/lv_work"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp">
            <LinearLayout
                android:background="@drawable/setbar_bg"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:text="班组:"
                    android:textColor="@color/colorTitle"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:gravity="center"
                    android:id="@+id/spGroupName"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_marginLeft="80dp"
                    android:id="@+id/etName"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvSearch"
                    android:text="查找"
                    android:textColor="@color/colorTitle"
                    android:textSize="20sp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <GridView
                android:id="@+id/gv_group"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@color/cardview_light_background"
                android:numColumns="2"
                android:stretchMode="columnWidth">

            </GridView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</layout>
